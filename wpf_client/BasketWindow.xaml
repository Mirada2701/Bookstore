<Window x:Class="wpf_client.BasketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_client"
        mc:Ignorable="d"
        Title="BasketWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Images/back.jpg"></ImageBrush>
    </Window.Background>
    <Border CornerRadius="8" Margin="100,0,100,0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listBook" Grid.ColumnSpan="2"></ListBox>
            <TextBlock x:Name="priceBlock" Grid.Row="1" FontFamily="Comic Sans MS" FontSize="20"></TextBlock>
        <Button Grid.Column="1" Grid.Row="1" Margin="5" Padding="5" FontFamily="Comic Sans MS" FontSize="20" Click="Button_Click">Buy</Button>
    </Grid>
    </Border>
</Window>
